{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body %}
    <div class="card" style="margin: 10px">
        <div class="card-header"><b>Customer</b></div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ customer.id }}</td>
                    </tr>
                    <tr>
                        <th>Firstname</th>
                        <td>{{ customer.firstname }}</td>
                    </tr>
                    <tr>
                        <th>FamilyName</th>
                        <td>{{ customer.familyName }}</td>
                    </tr>
                    <tr>
                        <th>Country</th>
                        <td>{{ customer.country }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col">
                    <a href="{{ path('customer_index') }}" role="button" class="btn btn-secondary">Cancel</a>
                </div>
                <div class="col">
                    <a href="{{ path('customer_edit', {'id': customer.id}) }}" role="button" class="btn btn-info"><i
                                class="fa fa-edit"></i> Edit</a>
                </div>
                <div class="col align-self-end">{{ include('customer/_delete_form.html.twig') }}</div>
            </div>

        </div>
    </div>
    </div>
{% endblock %}
