<div class="card-body">
    {{ form_start(form) }}
    {{ form_row(form.summary) }}
    {{ form_row(form.description) }}
    {{ form_row(form.capacity) }}
    {{ form_row(form.superficy) }}
    {{ form_row(form.price) }}
    {{ form_row(form.address) }}
    {{ form_row(form.regions) }}
</div>
<div class="card-footer">
    <div class="row">
        <div class="col">
            <a href="{{ path('owner_room_index') }}" role="button" class="btn btn-secondary"
               style="margin: 5px">Cancel</a>
        </div>
        <div class="col">
            <button class="btn btn-success" style="margin: 5px">{{ button_label|default('Save') }}</button>
        </div>
    </div>
    {{ form_end(form) }}
</div>
