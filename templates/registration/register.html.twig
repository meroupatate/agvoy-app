{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="row justify-content-center align-self-center" style="margin: 15px">
        <div class="card">
            <div class="card-header"><b>Register</b></div>
            <div class="card-body">
                {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.firstname) }}
                {{ form_row(registrationForm.familyName) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword) }}
                {{ form_row(registrationForm.address) }}
                {{ form_row(registrationForm.country) }}
                <div class="form-group">
                    <div class="form-check">
                        <label class="form-check-label" for="isOwner">I want to register as a room
                            owner
                            <input id="isOwner" class="form-check-input" type="checkbox"
                                   name="isOwner">
                            <span class="form-check-sign">
                                <span class="check"></span>
                            </span>
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <label class="form-check-label" for="agreeTerms">I agree to terms and
                            conditions
                            <input id="agreeTerms" class="form-check-input" type="checkbox"
                                   name="agreeTerms" required="required">
                            <span class="form-check-sign">
                                <span class="check"></span>
                            </span>
                        </label>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-success">{{ button_label|default('Register') }}</button>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
