{% extends 'base.html.twig' %}

{% block title %}Unavailability{% endblock %}

{% block body %}
    <div class="card" style="margin: 10px">
        <div class="card-header"><b>Unavailability</b></div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ unavailability.id }}</td>
                    </tr>
                    <tr>
                        <th>StartDate</th>
                        <td>{{ unavailability.startDate ? unavailability.startDate|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>EndDate</th>
                        <td>{{ unavailability.endDate ? unavailability.endDate|date('Y-m-d') : '' }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col">
                    <a href="{{ path('unavailability_index') }}" role="button"
                       class="btn btn-secondary">Cancel</a>
                </div>
                <div class="col">
                    <a href="{{ path('unavailability_edit', {'id': unavailability.id}) }}" role="button"
                       class="btn btn-info"><i
                                class="fa fa-edit"></i>
                        Edit</a>
                </div>
                <div class="col align-self-end">{{ include('unavailability/_delete_form.html.twig') }}</div>
            </div>
        </div>
    </div>
    </div>
    </div>
{% endblock %}
