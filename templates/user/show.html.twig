{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="card" style="margin: 10px">
        <div class="card-header"><b>User</b></div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th>Owner</th>
                        <td>{{ user.owner }}</td>
                    </tr>
                    <tr>
                        <th>Customer</th>
                        <td>{{ user.customer }}</td>
                    </tr>
                    <tr>
                        <th>Roles</th>
                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    </tr>
                    <tr>
                        <th>Hashed password</th>
                        <td>{{ user.password }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col">
                    <a href="{{ path('user_index') }}" role="button" class="btn btn-secondary">Cancel</a>
                </div>
                <div class="col">
                    <a href="{{ path('user_edit', {'id': user.id}) }}" role="button" class="btn btn-info"><i
                                class="fa fa-edit"></i> Edit</a>
                </div>
                <div class="col align-self-end">{{ include('user/_delete_form.html.twig') }}</div>
            </div>
        </div>
    </div>
{% endblock %}
