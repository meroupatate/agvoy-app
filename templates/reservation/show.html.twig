{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <div class="card" style="margin: 10px">
        <div class="card-header"><b>Reservation</b></div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ reservation.id }}</td>
                    </tr>
                    <tr>
                        <th>Customer</th>
                        <td>{{ reservation.customer }}</td>
                    </tr>
                    <tr>
                        <th>Room</th>
                        <td>{{ reservation.room }}</td>
                    </tr>
                    <tr>
                        <th>Start Date</th>
                        <td>{{ reservation.startDate ? reservation.startDate|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>End Date</th>
                        <td>{{ reservation.endDate ? reservation.endDate|date('Y-m-d') : '' }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col">
                    <a href="{{ path('reservation_index') }}" role="button"
                       class="btn btn-secondary">Cancel</a>
                </div>
                <div class="col">
                    <a href="{{ path('reservation_edit', {'id': reservation.id}) }}" role="button"
                       class="btn btn-info"><i
                                class="fa fa-edit"></i>
                        Edit</a>
                </div>
                <div class="col align-self-end">{{ include('reservation/_delete_form.html.twig') }}</div>
            </div>
        </div>
    </div>
{% endblock %}
