{% extends 'base.html.twig' %}

{% block title %}Region{% endblock %}

{% block body %}
    <div class="card" style="margin: 10px">
        <div class="card-header"><b>Region</b></div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ region.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ region.name }}</td>
                    </tr>
                    <tr>
                        <th>Presentation</th>
                        <td>{{ region.presentation }}</td>
                    </tr>
                    <tr>
                        <th>Country</th>
                        <td>{{ region.country }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col">
                    <a href="{{ path('region_index') }}" role="button" class="btn btn-secondary">Cancel</a>

                    <a href="{{ path('region_edit', {'id': region.id}) }}" role="button" class="btn btn-info"><i
                                class="fa fa-edit"></i> Edit</a>
                </div>
                <div class="col align-self-end">{{ include('region/_delete_form.html.twig') }}</div>
            </div>
        </div>
    </div>
{% endblock %}
