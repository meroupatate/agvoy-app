{% extends 'base.html.twig' %}

{% block title %}Owner{% endblock %}

{% block body %}
    <div class="card" style="margin: 10px">
        <div class="card-header"><b>Owner</b></div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ owner.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ owner.firstname }} {{ owner.familyName }}</td>
                    </tr>
                    <tr>
                        <th>User</th>
                        <td>{{ owner.user }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <div class="row">
                <div class="col">
                    <a href="{{ path('owner_index') }}" role="button" class="btn btn-secondary">Cancel</a>
                </div>
                <div class="col">
                    <a href="{{ path('owner_edit', {'id': owner.id}) }}" role="button" class="btn btn-info"><i
                                class="fa fa-edit"></i> Edit</a>
                </div>
                <div class="col align-self-end">{{ include('owner/_delete_form.html.twig') }}</div>
            </div>
        </div>
    </div>
{% endblock %}
